<Window x:Class="GalaxyGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalaxyGen"
        mc:Ignorable="d"
        Title="Galaxy Life Simulation of Everything" Height="800" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" ItemsSource="{Binding Planets}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedPlanet}" />
        <TextBox Grid.Column="1" Text="{Binding SelectedPlanet.Society.Name}" />
    </Grid>
</Window>
